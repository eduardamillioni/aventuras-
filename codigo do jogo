    function mostrarCena(cena) {
      const conteudo = cenas[cena];
      document.getElementById("historia").innerHTML = <p>${conteudo.texto}</p>;
      document.getElementById("imagem").innerHTML = <img src="${conteudo.imagem}" alt="Cena">;
      
      const opcoesDiv = document.querySelector(".opcoes");
      opcoesDiv.innerHTML = "";
      conteudo.opcoes.forEach(op => {
        const btn = document.createElement("button");
        btn.textContent = op.texto;
        btn.onclick = () => mostrarCena(op.destino);
        opcoesDiv.appendChild(btn);
      });
    }

    mostrarCena("inicio");
